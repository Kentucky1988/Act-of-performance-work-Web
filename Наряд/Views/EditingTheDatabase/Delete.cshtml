@model Наряд.Models.Робітники

@{
    Layout = null;
}

<div style="text-align: center"><h3>Видалити</h3></div>

    @using (Html.BeginForm("Delete", "EditingTheDatabase", FormMethod.Post, new { id = "popupForm" }))
    {
        @Html.HiddenFor(a => a.Id_Робітника)
        <div class="form-group">
            <label>@Html.LabelFor(a => a.П_І_Б, new { @class = "control-label" }):</label>
            <label>@Model.П_І_Б</label>
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(a => a.Професія, new { @class = "control-label" }):</label>
            <label>@Model.Професія</label>
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(a => a.Тарифний_розряд, new { @class = "control-label" }):</label>
            <label>@Model.Тарифний_розряд</label>
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(a => a.Категорія, new { @class = "control-label" }):</label>
            <label>@Model.Категорія</label>
        </div>
        <div>
            <input class="btn btn-danger" type="submit" value="Видалити дані" />
        </div>
    }
