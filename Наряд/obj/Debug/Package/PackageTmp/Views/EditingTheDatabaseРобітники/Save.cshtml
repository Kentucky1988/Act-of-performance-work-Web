@model Наряд.Models.Робітники

@{
    Layout = null;
}

<div style="text-align: center"><h3>Зберегти</h3></div>

@using (Html.BeginForm("Save", "EditingTheDatabaseРобітники", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id_Робітника > 0)
    {
        @Html.HiddenFor(a => a.Id_Робітника)
    }

    <div class="form-group">
        @Html.LabelFor(a => a.П_І_Б, new { @class = "control-label" })
        @Html.TextBoxFor(a => a.П_І_Б, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.П_І_Б)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Професія, new { @class = "control-label" })
        @Html.TextBoxFor(a => a.Професія, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Професія)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Тарифний_розряд, new { @class = "control-label" })
        @Html.TextBoxFor(a => a.Тарифний_розряд, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Тарифний_розряд)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Категорія, new { @class = "control-label" })
        @Html.TextBoxFor(a => a.Категорія, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Категорія)
    </div>
    <div>
        <input type="submit" value="Зберегти" class="btn btn-primary" />
        <input type="reset" value="Очистити" class="btn btn-default" />
    </div>
}





